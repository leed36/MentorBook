<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentchapter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter Fragment"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>
    <EditText
        android:id="@+id/newChapter"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="ADD A CHAPTER"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorInputBackgroud"
        />
    <TextView
        android:id="@+id/newChapterNum"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/colorMenteeMentorBtn"
        android:textColor="#ffffff"
        android:text="1"
        android:textSize="50sp"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/buttonNewChapter"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="#00ff00"/>



</RelativeLayout>